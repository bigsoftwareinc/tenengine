server {
	listen 80;
	listen [::]:80;
	server_name bigcomputer.vn www.bigcomputer.vn;
	if ($host = bigcomputer.vn) {
		return 301 https://$host$request_uri;
	}
	root /usr/share/nginx/html;

}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name bigcomputer.vn www.bigcomputer.vn;
	ssl_certificate /etc/ssl/bigcomputer.vn/certificate.crt;
	ssl_certificate_key /etc/ssl/bigcomputer.vn/private.key;
	root /usr/share/nginx/html;

	location / {
		index  index.html;
	}

}

